        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
