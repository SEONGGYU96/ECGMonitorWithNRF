<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_ecg"
    app:startDestination="@id/monitorFragment">
    <fragment
        android:id="@+id/monitorFragment"
        android:name="com.seoultech.ecgmonitor.monitor.MonitorFragment"
        android:label="MonitorFragment" >
        <action
            android:id="@+id/action_monitorFragment_to_scanFragment"
            app:destination="@id/scanFragment" />
        <action
            android:id="@+id/action_monitorFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>
    <fragment
        android:id="@+id/scanFragment"
        android:name="com.seoultech.ecgmonitor.bluetooth.scan.ScanFragment"
        android:label="ScanFragment" />
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.seoultech.ecgmonitor.setting.SettingFragment"
        android:label="SettingFragment" />
</navigation>