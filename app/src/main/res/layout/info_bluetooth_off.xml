<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_bluetoothoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/entire_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="?attr/colorControlNormal"
        app:srcCompat="@drawable/ic_bluetooth_disabled" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_bluetoothoff"
        style="@style/Widget.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/entire_vertical_margin"
        android:text="@string/bluetooth_disabled"
        android:textColor="?colorAccent"
        app:layout_constraintBottom_toTopOf="@id/button_bluetoothoff_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_bluetoothoff" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_bluetoothoff_on"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bluetooth_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_bluetoothoff" />

</androidx.constraintlayout.widget.ConstraintLayout>