<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_nohistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/entire_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textview_nohistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_history_48" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_nohistory"
        style="@style/Widget.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/entire_vertical_margin"
        android:text="@string/history_no_data_title"
        android:textColor="?colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/textview_nohistory_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_nohistory" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textview_nohistory_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/entire_vertical_margin"
        android:text="@string/history_no_data_describe"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_nohistory" />

</androidx.constraintlayout.widget.ConstraintLayout>